pipeline {
    agent any

    tools {
        maven 'Maven 3.8.1'   // Must match name in Global Tool Configuration
        jdk 'Java 21'         // Must match name in Global Tool Configuration
    }

   

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],  // Change if your branch is not 'main'
                    userRemoteConfigs: [[
                        url: 'https://github.com/SekharUmmadisetti/jenkins-spring-demo1.git',
                        credentialsId: 'sekhar'  // Change to your Jenkins credential ID
                    ]]
                ])
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
