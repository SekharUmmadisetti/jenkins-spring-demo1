pipeline {
    agent any

    tools {
        maven 'Maven 3.8.1' // Configure this in Jenkins settings
        jdk 'Java 21'       // Configure this in Jenkins settings
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SekharUmmadisetti/jenkins-spring-demo1.git' // replace with your Git repo
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
